@*@using PagedList;
    @using PagedList.Mvc;*@
@model List<WebApplication2.Models.UserDTO>;
@{
    ViewData["Title"] = "Home Page";
}

@Html.ActionLink("Create", "Create", null ,null , new {@class="btn btn-success"})

<h2>Users</h2>


<table class="table">
    <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Gender</th>
        <th>Active</th>
        <th></th>
    </tr>

    @foreach (var user in Model)
    {
        <tr>
            <td>@user.Name</td>
            <td>@user.Email</td>
            <td>@user.Gender</td>
            <td>@user.Status</td>
            <td>@Html.ActionLink("Delete", "Delete", new {id = @user.Id}, new {@class="btn btn-danger"})</td>
        </tr>
    }



</table>

